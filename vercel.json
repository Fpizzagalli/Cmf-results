{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  # This will match /api/events, /api/something, etc.
      "dest": "/api/index.py" # And route ALL of them to api/index.py
    },
    {
      "src": "/(.*)",       # This is for the root path and any other non-/api paths
      "dest": "api/index.py"
    }
  ]
}
